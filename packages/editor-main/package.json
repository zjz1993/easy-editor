{
	"name": "@easy-editor/editor",
	"version": "0.0.1",
	"private": false,
	"files": [
		"dist"
	],
	"module": "dist/index.mjs",
	"types": "dist/index.d.mts",
	"exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
	"scripts": {
    "clean": "rm -rf dist && rm -rf .turbo",
    "dev": "tsup src/index.ts --format esm --watch --silent --dts",
    "build": "tsup --config tsup.config.ts"
  },
	"description": "基于tiptap的编辑器",
	"publishConfig": {
    "access": "public"
  },
	"dependencies": {
		"@easy-editor/context": "workspace:^",
		"@easy-editor/editor-common": "workspace:^",
		"@easy-editor/editor-toolbar": "workspace:^",
		"@easy-editor/extension-bold": "workspace:^",
		"@easy-editor/extension-code-block": "workspace:^",
		"@easy-editor/extension-image": "workspace:^",
		"@easy-editor/extension-indent": "workspace:^",
		"@easy-editor/extension-link": "workspace:^",
		"@easy-editor/extension-outline": "workspace:^",
		"@easy-editor/extension-table": "workspace:^",
		"@easy-editor/extension-task-item": "workspace:^",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
    "@tiptap/core": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/extension-color": "^3.13.0",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-paragraph": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "tsup": "^8.5.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5.6.0"
  },
	"peerDependencies": {
    "@tiptap/core": "^3.13.0",
    "@tiptap/extension-color": "^3.13.0",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-paragraph": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
